<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="3dip" />
            <gradient
                android:angle="90"
                android:centerColor="#ffdddddd"
                android:centerY="0.50"
                android:endColor="#e2464646"
                android:startColor="#e2666666" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="3dip" />
                <gradient
                    android:angle="270"
                    android:endColor="#e2006606"
                    android:startColor="#e203a719" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="3dip" />
                <gradient
                    android:angle="270"
                    android:endColor="#e2002f8b"
                    android:startColor="#e2004ad6" />
            </shape>
        </clip>
    </item>
</layer-list>
